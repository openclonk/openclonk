<funcs>
  <func>
    <title>SetPlrMagic</title>
    <category>Player</category>
    <version>1.0 OC</version>
    <syntax>
      <rtype>int</rtype>
      <params>
        <param>
          <type>int</type>
          <name>player</name>
          <desc>Number of the player whose list of available spells you want to change.</desc>
        </param>
        <param>
          <type>id</type>
          <name>id</name>
          <desc>ID of the spell.</desc>
        </param>
        <param>
          <type>bool</type>
          <name>remove</name>
          <desc>Whether to remove the spell.</desc>
        </param>
      </params>
    </syntax>
    <desc>Adds or removes a magic spell to or from the list of available spells of a player.</desc>
    <related><funclink>GetPlrMagic</funclink></related>
  </func>
