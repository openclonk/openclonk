<funcs>
  <func>
    <title>SetWealth</title>
    <category>Spieler</category>
    <version>4.6.5.0 CP</version>
    <syntax>
      <rtype>bool</rtype>
      <params>
        <param><type>int</type><name>player</name><desc>Spielernummer des Spielers, dessen Vermögen verändert werden soll</desc></param>
        <param><type>int</type><name>value</name><desc>Das neue Vermögen.</desc></param>
      </params>
    </syntax>
    <desc>Setzt das Vermögen eines Spielers.</desc>
    <examples>
      <example>
        <code>SetWealth(5, 0);</code>
        <text>Ruiniert den sechsten Spieler.</text>
      </example>
    </examples>
    <related>
      <funclink>GetWealth</funclink>
      <funclink>DoWealth</funclink>
    </related>
  </func>
  <author>jwk</author><date>August 2002</date>
</funcs>
