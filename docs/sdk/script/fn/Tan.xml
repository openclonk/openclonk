<!DOCTYPE funcs
  SYSTEM '../../../clonk.dtd'>
<?xml-stylesheet type="text/xsl" href="../../../clonk.xsl"?>
<funcs>
  <func>
    <title>Tan</title>
    <category>Arithmetics</category>
    <version>1.0 OC</version>
    <syntax>
      <rtype>int</rtype>
      <params>
        <param>
          <type>int</type>
          <name>angle</name>
          <desc>Angle in degrees</desc>
        </param>
        <param>
          <type>int</type>
          <name>radius</name>
          <desc>Radius</desc>
        </param>
        <param>
          <type>int</type>
          <name>precision</name>
          <desc>If specified, the angle will be divided by this value. An angle of 445° and a precision value of 10 will thus result in a more precise angle of 45,5° internally.</desc>
          <optional />
        </param>
      </params>
    </syntax>
    <desc>Returns tan(angle) * radius.</desc>
    <related>
      <funclink>Cos</funclink>
      <funclink>Sin</funclink>
      <funclink>Angle</funclink>
    </related>
  </func>
  <author>Newton</author><date>2009-07</date>
</funcs>
