<funcs>
  <func>
    <title>VerticesStuck</title>
    <category>Objekte</category><subcat>Vertices</subcat>
    <version>4.9.1.0 GWE</version>

    <syntax>
      <rtype>int</rtype>
        <params>
          <param>
            <type>object</type>
            <name>obj</name>
            <desc>Zielobjekt</desc><optional />
          </param>
        </params>
      </syntax>

      <desc>Liefert die Anzahl feststeckender Vertices von *obj</desc>

      <examples>
        <example>
          <code>var obj=FindObject(Find_ID(FLAG));
if (VerticesStuck(obj)) RemoveObject(obj);</code>
          <text>Entfernt obj wenn einer seiner Vertices feststeckt</text>
        </example>
      </examples>

      <related>
        <funclink>GetVertex</funclink>
        <funclink>Stuck</funclink>
      </related>
  </func>
  <author>flgr</author><date>Januar 2002</date>
</funcs>

