<funcs>
  <func>
    <title>PushParticles</title>
    <category>Particles</category>
    <version>1.0 OC</version>
    <syntax>
      <rtype>bool</rtype>
      <params>
        <param>
          <type>string</type>
          <name>name</name>
          <desc>Name of the particle definition you want to accelerate. If not specified, all particle types will be moved.</desc>
        </param>
        <param>
          <type>int</type>
          <name>xacc</name>
          <desc>Horizontal accelleration</desc>
        </param>
        <param>
          <type>int</type>
          <name>yacc</name>
          <desc>Vertical accelleration</desc>
        </param>
      </params>
    </syntax>
    <desc>Speeds up all particles of the specified type with a given direction.</desc>
    <examples>
      <example>
        <code>PushParticles(&quot;Smoke&quot;, -50, 0);</code>
        <text>Blows all smoke particles to the left.</text>
      </example>
    </examples>
    <related>
      <funclink>CreateParticle</funclink>
      <funclink>ClearParticles</funclink>
    </related>
  </func>
  <author>Sven2</author><date>2002-04</date>
</funcs>
