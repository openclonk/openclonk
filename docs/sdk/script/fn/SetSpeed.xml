<funcs>
  <func>
    <title>SetSpeed</title>
    <category>Objects</category>
    <subcat>Movement</subcat>
    <version>1.0 OC</version>
    <syntax>
      <rtype>bool</rtype>
      <params>
        <param>
          <type>int</type>
          <name>xdir</name>
          <desc>Horizontal speed divided by precision.</desc>
        </param>
        <param>
          <type>int</type>
          <name>ydir</name>
          <desc>Vertical speed divided by precision.</desc>
        </param>
        <param>
          <type>int</type>
          <name>precision</name>
          <desc>Precision. Default 10 if not specified.</desc>
          <optional />
        </param>
      </params>
    </syntax>
    <desc>Sets the speed of the object.</desc>
    <related>
      <funclink>GetXDir</funclink>
      <funclink>GetYDir</funclink>
      <funclink>SetXDir</funclink>
      <funclink>SetYDir</funclink>
      <funclink>SetRDir</funclink>
      <funclink>SetR</funclink>
    </related>
  </func>
  <author>Newton</author><date>2009-07</date>
</funcs>
