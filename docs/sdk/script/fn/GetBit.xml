  <func>
    <title>GetBit</title>
    <category>Arithmetics</category>
    <version>1.0 OC</version>
    <syntax>
      <rtype>bool</rtype>
      <params>
        <param>
          <type>int</type>
          <name>old_value</name>
          <desc>Old value of the bit masc</desc>
        </param>
        <param>
          <type>int</type>
          <name>bit_number</name>
          <desc>The requested bit.</desc>
        </param>
      </params>
    </syntax>
    <desc>Returns the value of the bit_number'th bit.</desc>
